@model AECS20250319.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4 mb-5">
    <h1 class="display-4 text-primary mb-3">User</h1>
    <hr class="border-primary" />
    <dl class="row bg-white rounded shadow-sm p-4">
        <dt class="col-sm-2 text-right font-weight-bold text-secondary">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2 text-right font-weight-bold text-secondary">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-right font-weight-bold text-secondary">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>

<div class="container mb-5">
    <div class="d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">
            <i class="fas fa-edit mr-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-1"></i>Back to List
        </a>
    </div>
</div>