<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AECS20250319.AppWebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AECS20250319.AppWebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar / Menú lateral -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarMenu">
                <div class="sidebar-sticky pt-3">
                    <a class="navbar-brand d-flex align-items-center mb-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/img/logo.png" alt="Logo" class="mr-2" style="width: 30px; height: 30px;">
                        <span>AECS20250319</span>
                    </a>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door mr-2"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock mr-2"></i>
                                Privacy
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Brands" asp-action="Index">
                                    <i class="bi bi-tag mr-2"></i>
                                    Marcas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Categories" asp-action="Index">
                                    <i class="bi bi-list-ul mr-2"></i>
                                    Categorías
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="bi bi-people mr-2"></i>
                                    Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-box mr-2"></i>
                                    Productos
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="mt-4 border-top pt-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var nombre = User.FindFirst("Nombre")?.Value;
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-circle mr-2"></i>
                                <span>@nombre</span>
                            </div>
                            <a class="btn btn-outline-secondary btn-sm d-flex align-items-center"
                               asp-area="" asp-controller="User" asp-action="CerrarSession">
                                <i class="bi bi-box-arrow-right mr-1"></i>
                                Cerrar sesión
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-primary d-flex align-items-center justify-content-center"
                               asp-area="" asp-controller="User" asp-action="login">
                                <i class="bi bi-box-arrow-in-right mr-2"></i>
                                Iniciar sesión
                            </a>
                        }
                    </div>
                </div>
            </nav>

            <!-- Contenido principal -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <!-- Barra superior para móviles -->
                <nav class="navbar navbar-light bg-light d-md-none border-bottom mb-3">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidebarMenu"
                            aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AECS20250319</a>
                </nav>

                <!-- Contenido de la página -->
                @RenderBody()

                <!-- Footer -->
                <footer class="border-top footer text-muted mt-4">
                    <div class="container">
                        &copy; 2025 - AECS20250319.AppWebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
